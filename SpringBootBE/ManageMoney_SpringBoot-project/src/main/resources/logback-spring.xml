            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%mdc] [%-5level]: %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="FILE"/>
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ROLLING" />
        </root>

        <logger name="org.springframework" level="INFO"/>
